pipeline {
    agent any
    
    parameters {
        string(name: 'EC2_IP', description: 'Enter your EC2 instance IP address')
        string(name: 'DOCKER_IMAGE', description: 'Enter the Docker image to pull')
    }

    stages {
        stage('SSH to EC2 and Run Docker Container') {
            steps {
                script {
                    // Use sshagent to handle SSH key
                    sshagent(['ec2-ssh-key']) {
                        // Create an SSH command to execute the required commands on the EC2 instance
                        def sshCommandPull = "ssh -o StrictHostKeyChecking=no -t ubuntu@${params.EC2_IP} sudo docker pull ${params.DOCKER_IMAGE}"
                        def sshCommandRun = "ssh -o StrictHostKeyChecking=no -t ubuntu@${params.EC2_IP} sudo docker run -d -p 8081:8081 ${params.DOCKER_IMAGE}"
                        
                        // Execute the SSH command to pull the Docker image
                        sh sshCommandPull
                        
                        // Execute the SSH command to run the Docker container
                        sh sshCommandRun
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Docker container started successfully!'
        }
        failure {
            echo 'Failed to start Docker container. Please check the logs for details.'
        }
        always {
            cleanWs()
        }
    }
}
